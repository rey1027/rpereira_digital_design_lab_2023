module contador#(parameter N = 6 ) 
						(input  logic clk,reset,s,r,d,a,
						 output logic [N-1 : 0] c);
	
	 initial c <= 2**N - 1;
    always_ff @(posedge clk) begin
		if (reset) c = 2**N - 1;
		if (a === 0) 
		begin 
			if (s === 0) c = c + 1;
			else if (r === 0) c = c - 1;
		end
		else if (a)
		begin 
			if (d === 0) c = c - 1;
		end	
	 end  
  endmodule